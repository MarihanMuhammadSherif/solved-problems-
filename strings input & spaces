
#include <stdio.h>
/*
scanf cannt recognize spaces 
so we must use "%[^\n]s"
fgets does recognise spaces

*/ 
int main()
{
     //reading  a string with spaces  using
     int i;
char A[30];
////////////////////
//1.scanf
scanf("%s",A);
for(i=0;A[i] !=0;++i)
{

          printf("%c %d \n",A[i],A[i]);
}
/////////////////////////
//2. scanf with [^\n]
scanf("%[^\n]s",A);
for(i=0;A[i] !=0;++i)
{

          printf("%c %d \n",A[i],A[i]);
}
///////////////////////
//3.fgets
fgets(A,30,stdin);

for(i=0;A[i] !=0;++i)
{

          printf("%c %d \n",A[i],A[i]);
}



    return 0;
}

///function to calculate the number of words in a string


int counter_words(char* a){`

 // go through chars in a
 // if ' ' new word
 int words=1;
 int i;
 for(i=0;i<strlen(a);++i)
 {
      if(a[i]==' ' && a[i+1] !=0)
      {
           ++words;
      }
 }
return words;}
